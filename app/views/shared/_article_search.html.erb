<h2> Search results for "<%= @query %>" </h2> <div class="clear"></div>
<h3> Found <%= pluralize @total_results, 'result' %> </h3> <div class="clear"></div>

<% results.each do |result| %>
	<p><h4>Title:</h4> <%= link_to result.title, article_path(result.id) %> </p>
	<p><h4>Programming Language:</h4> <%= result.programming_language %> </p>
	<p><h4>Author:</h4> <%= result.user.full_name %></p>	

	<hr />
<% end %>

<%= will_paginate @results %>

<script>
$(function(){
   $('.pagination a').attr('data-remote', 'true')
});
</script>